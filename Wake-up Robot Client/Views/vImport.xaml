<Window x:Class="Wake_up_Robot_Client.Views.vImport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Importeren" Height="150" MinHeight="150" Width="300" MinWidth="250" Name="vMain" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"     Name="LeftMargin"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Column="1"
            Name="lblSelect"
            Content="Selecteer het type agenda" 
            Height="28" HorizontalAlignment="Left" VerticalAlignment="Top" 
        />
        <StackPanel Grid.Column="1" Grid.Row="1" Margin="7,0,0,36" Name="radioButtons" Height="auto">
            <RadioButton 
                Name="rdbICal"
                Content="ICalendar (*.ics) bestand" 
                Checked="rdb_Checked" 
            />
            <RadioButton
                Name="rdbGoogleAgenda"
                Content="Google agena"
                Checked="rdb_Checked"
            />
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Orientation="Horizontal">
            <Button  Margin="2"
                Name="btnCancel"
                Content="Annuleer"  Height="23"   Width="75" 
                Click="btnCancel_Click" />

            <Button  Margin="2"
                Name="btnNext"
                Content="Volgende"  Height="23"   Width="75" 
                Click="btnNext_Click"
                IsEnabled="False"
            />
            
        </StackPanel>
    </Grid>
</Window>
