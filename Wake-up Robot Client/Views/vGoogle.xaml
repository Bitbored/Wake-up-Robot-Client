<Window x:Class="Wake_up_Robot_Client.Views.vGoogle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="vGoogle" Height="300" Width="300"
        WindowStartupLocation="CenterScreen" Icon="clock.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"     Name="LeftMargin"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <Label Name="lblUsername">Username:</Label>
                <TextBox Name="txtUsername" Width="100"/>
                <Label Name="lblPassword">Password:</Label>
                <PasswordBox Name="txtPassword" Width="40"></PasswordBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
